<%- include('partials/header.ejs')%>

<div class="row py-4">
    <div class="container-fluid bg-light p-4 rounded shadow">
        <% if(success){ %><div class="alert alert-success py-2" role="alert">Files Uploaded Successsfully!</div><% } %>
        <% if(error){ %><div class="alert alert-danger py-2" role="alert">Error uploading files, please try again!</div><% } %>
        <h1>Upload media Here</h1>
        <form action="/mediaupload" enctype="multipart/form-data" method="POST">
            <div class="form-group py-2"><input type="file" name="uploadFiles" class="form-control" multiple="multiple"></div>
            <div class="form-group py-2 d-grid gap-2"><button class="btn btn-outline-primary">Upload</button></div>
        </form>
    </div>
</div>

<%- include('partials/footer.ejs') %>